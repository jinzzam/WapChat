<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conference Chat</title>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.dev.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/kfonts2.css" rel="stylesheet">

</head>
<body>
<h1>WAP Conference Chat</h1>
<form>
    <div id="chat-body" rows="20px" itemtype="checkbox"
         style="border: 1px solid;width:50%;height: 300px;overflow:scroll;"></div>
    <!--닉네임 사용여부 기능-->
    <p><label>Choose Online_id: <br/></label>
        Using nickname:<input type="radio" name="onlineid" id="onlineid_nick" value="" checked>
        Using name:<input type="radio" name="onlineid" id="onlineid_name" value="">
    </p>
    <label>Type what you want to say: </label>
    <input type="text" id="mytext" placeholder="type anything">
    <input type="button" value="chat" onclick="clk()">
    <br>
    회의 안건 개수를 입력하세요 : <input type="text" id="agendacount" placeholder="숫자로만 입력하세요"><input type="button"
                                                                                          value="개수입력"><br>
    <div id="conference-table" readonly rows="20px" itemtype="checkbox" style="border: 1px solid;width:50%;height: 300px;overflow:scroll"></div><br>
    <input type="button" id="deletingButton" value="Delete">
    <input type="button" id="exportingButton" value="Export"><br>
</form>
<script src="/js/bootstrap.min.js"></script>
</body>
<script>
    var socket = io.connect("http://localhost:5000");

    var arr = [];
    var moveArr=[];
    var moveToConferenceTalbe = '<input type="checkbox" id="checkBox" onclick="chk(arr[arr.length-1])">';
    var moveToTextFile = '<input type="checkbox" id="textCheckbox" onclick="chk()">';

    function f(data) {
        return '<b>' + data + '</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' + moveToConferenceTalbe + '<br>';
    }
    //클릭하면 데이터 옮기는 함수
    function chk(data){
        //Get the checkBox
        var CheckBox=document.getElementById("checkBox");
        //Get the output text
        var checkedText=document.getElementById("mytext");

        //If the checkbox is checked, display the output text
        if(CheckBox.checked==true){
            //conference-table에 데이터 옮기기
            socket.emit('conferenceChat',{cmsg:data});
        }
    }


    var socket = io.connect("http://localhost:4000");

    var roomId = 2;
    socket.emit('join:room', {roomId: roomId});

    function clk() {
        var message = $('#mytext').val();
        socket.emit('chatReqC', {msg: message});
    }

    socket.on('chatRes', function (data) {
        console.log(data);
        arr.push(f(data));
        $('#chat-body').html($('#chat-body').html() + arr[arr.length-1] + '\n');
    });

    socket.on('conferenceRes',function(data){
        console.log(data);
        moveArr.push(chk(data));
        $('#conference-table').html($('#conference-table').html()+moveArr[moveArr.length-1]+'\n');
    });

    $('#mytext').keydown(function (key) {
        var message = $('#mytext').val();
        if (key.keyCode == 13 && message != null) {
            socket.emit('chatReqC', {
                msg: message
            });
            $('#mytext').val(null);
            $('#mytext').focus();
        }
    });

</script>

</html>